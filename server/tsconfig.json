{
	"compilerOptions": {
		"target": "ES2019",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"typeRoots": ["./types", "./node_modules/@types"]
	},
	"include": ["src/**/*", "types/*"],
	"exclude": ["node_modules"]
}
