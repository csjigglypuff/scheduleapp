{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"typeRoots": ["./types", "./node_modules/@types"]
	},
	"include": ["src/**/*", "types/*"],
	"exclude": ["node_modules"]
}
